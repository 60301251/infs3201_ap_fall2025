<h1>{{photo.title}}</h1>
<p>{{photo.description}}</p>
<img src="/photos/{{photo.filename}}" style="max-width:300px;">
<p>Albums: {{#each photo.albums}}{{this}} {{/each}}</p>
<p>Tags: {{#each photo.tags}}{{this}} {{/each}}</p>
<h3>Add a New Tag</h3>
<form action="/photo/{{photo.id}}/tag" method="POST">
    <input type="text" name="tag" placeholder="Enter new tag" required>
    <button type="submit">Add Tag</button>
</form>
<a href="/photo/{{photo.id}}/edit">Edit</a> | <a href="/">Back</a>

<!-- COMMENTS -->

<h3>Comments</h3>
{{#if comments.length}}
  <ul>
    {{#each comments}}
      <li>
        <strong>{{username}}</strong>: {{text}}
        <br>
        <small>Posted on {{createdAt}}</small>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No comments yet.</p>
{{/if}}

<h4>Add a Comment</h4>
<form action="/photo/{{photo.id}}/comment" method="POST">
  <input type="text" name="username" placeholder="Your name (optional)">
  <br>
  <textarea name="comment" placeholder="Write your comment here: " required></textarea>
  <br>
  <button type="submit">Post Comment</button>
</form>
