<h1>Edit Photo: {{photo.title}}</h1>

<link rel="stylesheet" href="/styles/gallery.css">


<form action="/photo/{{photo.id}}/edit" method="POST">
  <label>Title: <input type="text" name="title" value="{{photo.title}}"></label><br>
  <label>Description: <input type="text" name="description" value="{{photo.description}}"></label><br>

<label>Visibility:</label>
<select name="visibility">
  <option value="public" {{#if (eq photo.visibility "public")}}selected{{/if}}>Public</option>
  <option value="private" {{#if (eq photo.visibility "private")}}selected{{/if}}>Private</option>
</select>

<p>Current: {{photo.visibility}}</p>
  <button type="submit">Save</button>
</form>

<a href="/photo/{{photo.id}}">Cancel</a>
