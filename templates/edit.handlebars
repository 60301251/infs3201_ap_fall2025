<h1>Edit Photo: {{photo.title}}</h1>

<form action="/photo/{{photo.id}}/edit" method="POST">
  <label>Title: <input type="text" name="title" value="{{photo.title}}"></label><br>
  <label>Description: <input type="text" name="description" value="{{photo.description}}"></label><br>

  <label>Visibility:</label>
<select name="visibility" required>
  <option value="public" {{#if photo.visibility}} {{#if (contains photo.visibility "public")}}selected{{/if}} {{/if}}>Public</option>
  <option value="private" {{#if photo.visibility}} {{#if (contains photo.visibility "private")}}selected{{/if}} {{/if}}>Private</option>
</select><br>


  <button type="submit">Save</button>
</form>

<a href="/photo/{{photo.id}}">Cancel</a>
