
<h1>{{albumName}}</h1>

<div class="gallery-grid">
    {{#if photos.length}}
        {{#each photos}}
            <div class="photo-card">
                <img src="/uploads/{{this.filename}}" alt="{{this.title}}" />
                <p>{{this.title}}</p>
            </div>
        {{/each}}
    {{else}}
        <p>No photos in this album yet.</p>
    {{/if}}
</div>

